<section id="featured-books" class="py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header align-center">
                    <div class="title">
                        <span>Some quality items</span>
                    </div>
                    <h2 class="section-title">Latest updates</h2>
                </div>

                <div class="product-list" data-aos="fade-up">
                    <div class="row">
                        @foreach (var item in lstNewBook)
                        {
                            <div class="col-md-3">
                                <div class="product-item">
                                    <figure class="product-style" name="pdfBook">
                                        <img src="@item.image" alt="Books" class="product-item" style="max-height:394.2px">
                                        <button type="button" class="add-to-cart" data-product-tile="add-to-cart">
                                            Save books to the library
                                        </button>
                                    </figure>

                                    <figcaption>
                                        <h3 style="font-family:auto;">@item.title</h3>
                                        <span>Armor Ramsey</span>
                                        <div class="item-price">$ 40.00</div>
                                    </figcaption>
                                </div>
                            </div>
                        }


                    </div><!--ft-books-slider-->
                </div><!--grid-->


            </div><!--inner-content-->
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="btn-wrap align-right">
                    <a href="/Books" class="btn-accent-arrow">
                        View all products <i class="icon icon-ns-arrow-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<section id="popular-books" style="background-color: #fefdf8;" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header align-center">
                    <div class="title">
                        <span>Some quality items</span>
                    </div>
                    <h2 class="section-title">Popular Books</h2>
                </div>
                @if (lstCate != null)
                {

                    <ul class="tabs">
                        @{
                            int ind = 0;
                        }
                        @foreach (var item in lstCate)
                        {
                            @if (ind == 0)
                            {
                                <li data-tab-target="#cate-@item.id" class="active tab">@item.title</li>
                                ind++;
                            }
                            else
                            {
                                <li data-tab-target="#cate-@item.id" class="tab">@item.title</li>
                                ind++;
                            }
                        }
                    </ul>

                    <div class="tab-content">
                        @{
                            int i = 0;
                        }
                        @foreach (var item in lstCate)
                        {
                            @if (i == 0)
                            {
                                <div id="cate-@item.id" data-tab-content class="active">
                                    <div class="row">
                                        @foreach (var itemProd in item.Books)
                                        {
                                            <div class="col-md-3">
                                                <div class="product-item">
                                                    <figure class="product-style">
                                                        <img src="@itemProd.image" alt="Books" class="product-item" style="max-height:394.2px">
                                                        <button type="button" class="add-to-cart" data-product-tile="add-to-cart">
                                                            Save books to the library
                                                        </button>
                                                    </figure>
                                                    <figcaption>
                                                        <h3 style="font-family:auto;">@itemProd.title</h3>
                                                        <span>Marmik Lama</span>
                                                    </figcaption>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                i++;
                            }
                            else
                            {
                                <div id="cate-@item.id" data-tab-content>
                                    <div class="row">
                                        @foreach (var itemProd in item.Books)
                                        {
                                            <div class="col-md-3">
                                                <div class="product-item">
                                                    <figure class="product-style">
                                                        <img src="@itemProd.image" alt="Books" class="product-item" style="max-height:394.2px">
                                                        <button type="button" class="add-to-cart" data-product-tile="add-to-cart">
                                                            Save books to the library
                                                        </button>
                                                    </figure>
                                                    <figcaption>
                                                        <h3 style="font-family:auto;">@itemProd.title</h3>
                                                        <span>Marmik Lama</span>
                                                    </figcaption>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                i++;
                            }

                        }
                    </div>
                }


            </div><!--inner-tabs-->

        </div>
    </div>
</section>

