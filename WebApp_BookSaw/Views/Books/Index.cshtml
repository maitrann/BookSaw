@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    List<API_BookSaw.Entities.Book> allBooks = ViewBag.allBooks;
}


<div class="container">
    <div class="col-md-12">
        <div class="colored">
            <h1 class="page-title" style="margin-top: 10px;">Books</h1>
        </div>
    </div>
</div>

<section class="padding-medium">
    <div class="container">
        <div class="row">
            @if (allBooks != null)
            {
                foreach (var item in allBooks)
                {
                    <div class="col-md-3">
                        <div class="product-item">
                            <figure class="product-style">
                                <img src="@item.image" alt="Books" class="product-item" style="max-height: 392.825px;">
                                <button type="button" class="add-to-cart" data-product-tile="add-to-cart">Save books to the library</button>
                            </figure>
                            <figcaption>
                                <h3 style="font-family:auto;">@item.title</h3>
                                <p>Adam Silber</p>
                            </figcaption>
                        </div>
                    </div>
                }
            }

        </div>

        <div class="row">

            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</section>

